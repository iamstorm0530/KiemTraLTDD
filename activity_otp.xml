<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFF5EF"
    tools:context=".OtpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Close Button -->
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="#2196F3" />

        <ImageView
            android:id="@+id/imgPhone"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Phone illustration"
            android:src="@drawable/ic_phone_verify" />

        <LinearLayout
            android:id="@+id/layoutOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Verification Code"
                android:textColor="#000000"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weâ€™ve sent a code to your email. It will expire soon!"
                android:textColor="#1565C0"
                android:textSize="13sp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="20dp"
                android:gravity="center" />

            <!-- OTP Boxes -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <EditText
                    android:id="@+id/etCode1"
                    style="@style/otpBox" />

                <EditText
                    android:id="@+id/etCode2"
                    style="@style/otpBox" />

                <EditText
                    android:id="@+id/etCode3"
                    style="@style/otpBox" />

                <EditText
                    android:id="@+id/etCode4"
                    style="@style/otpBox" />

                <EditText
                    android:id="@+id/etCode5"
                    style="@style/otpBox" />

                <EditText
                    android:id="@+id/etCode6"
                    style="@style/otpBox" />
            </LinearLayout>

            <Button
                android:id="@+id/btnVerifyCode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/btn_orange_solid"
                app:backgroundTint="@color/orange"
                android:text="Verify Code"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:gravity="center"
                android:elevation="2dp" />

            <TextView
                android:id="@+id/tvResend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend Code in 1:30 s"
                android:textColor="#1565C0"
                android:textSize="13sp"
                android:fontFamily="sans-serif"
                android:textStyle="italic"
                android:layout_marginTop="16dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
