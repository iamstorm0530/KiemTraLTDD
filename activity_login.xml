<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EF">

    <ImageView
        android:id="@+id/imageTopBG"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login_top_background1"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Welcome\nBack"
        android:textColor="#F37021"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageTopBG" />

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:drawableStart="@drawable/ic_email_small"
        android:drawablePadding="12dp"
        android:hint="Email or Username"
        android:inputType="textEmailAddress"
        android:paddingTop="20dp"
        android:paddingBottom="12dp"
        android:textColor="#3A3A3A"
        android:textColorHint="#909090"
        app:layout_constraintTop_toBottomOf="@id/textWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- PASSWORD -->
    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:drawableStart="@drawable/ic_password_small"
        android:drawablePadding="12dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingTop="20dp"
        android:paddingBottom="12dp"
        android:textColor="#3A3A3A"
        android:textColorHint="#909090"
        app:layout_constraintTop_toBottomOf="@id/edtUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/btnLogin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/login_btn_arraw1"
        android:contentDescription="Login"
        app:layout_constraintTop_toBottomOf="@id/edtPassword"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonFacebook"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_social_outline"
        android:drawableEnd="@drawable/ic_facebook_small"
        android:text="Facebook"
        android:textStyle="bold"
        android:textColor="#4A70A2"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonGoogle"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonGoogle"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_social_outline"
        android:drawableEnd="@drawable/ic_google_small"
        android:text="Google"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#4A70A2"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toTopOf="@id/buttonFacebook"
        app:layout_constraintBottom_toBottomOf="@id/buttonFacebook"
        app:layout_constraintStart_toEndOf="@id/buttonFacebook"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Are you new user? Register"
        android:textColor="#4A70A2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
